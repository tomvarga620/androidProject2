<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_16sdp"
    android:background="?attr/bkgcolor">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create or Choose list"
        android:textAlignment="center"
        android:textColor="?attr/colortext"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleChoseFavList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/editTextNewFavList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycleChoseFavList"
        android:layout_marginTop="25dp"
        android:textColor="?attr/colortext"
        android:ems="10"
        android:hint="Type name of new Favorit List"
        android:inputType="textPersonName" />

</RelativeLayout>