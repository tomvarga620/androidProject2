<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colortext">#FFFFFF</item>
        <item name="coloricon">#8E8E8E</item>
        <item name="coloriconchecked">#FFC700</item>
        <item name="colorbar">#FFFFFF</item>
        <item name="bkgcolor">@drawable/gradientbkg</item>
        <item name="btnplaycolor">#FFC700</item>
        <item name="btnplaybkgcolor">#FFFFFF</item>
        <item name="seekbarstyle">#8E8E8E</item>
        <item name="hintText">#363636</item>

        <item name="colorPrimaryDark">#FFD231</item>
        <item name="titleDialog">#FFCB1A</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colortext">#FFFFFF</item>
        <item name="coloricon">#8C8C8C</item>
        <item name="coloriconchecked">#FFC700</item>
        <item name="colorbar">#303030</item>
        <item name="bkgcolor">@drawable/gradientbkgdark</item>
        <item name="btnplaycolor">#444444</item>
        <item name="btnplaybkgcolor">#FFFFFF</item>
        <item name="seekbarstyle">#FFC700</item>
        <item name="hintText">#E7E7E7</item>


        <item name="colorPrimaryDark">#444444</item>
        <item name="titleDialog">#7E7E7E</item>


    </style>

    <style name="DialogeTheme" parent="Theme.AppCompat.Dialog.Alert">
<!--        <item name="android:background">@color/all_item_bg</item>-->
        <item name="colorAccent">#363636</item>
    </style>




    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="DialogeThemeDark" parent="Theme.AppCompat.Dialog.Alert">
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_custom_dialog</item>
    </style>




    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="switchColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">#FFC700</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#FFFFFF</item>
    </style>

</resources>
